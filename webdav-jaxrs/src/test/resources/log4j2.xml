<Configuration status="WARN" xmlns="http://logging.apache.org/log4j/2.0/config">
  <Appenders>
    <Console name="CONSOLE" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} %4.-4level [%-4.4t] %-30.30C{3} - %msg%n" />
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="org.jugs.webdav" level="DEBUG" />
    <Root level="INFO">
      <AppenderRef ref="CONSOLE" />
    </Root>
  </Loggers>
</Configuration>
